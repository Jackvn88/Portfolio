@model IEnumerable<Category>

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Categories" asp-action="Create">Add category</a>
}

<a asp-controller="Works" asp-action="Index">All works</a>

<div class="container-fluid">
    <div class="row no-gutters">
            @foreach (var category in Model)
            {
                <div class="col-md-4">
                    <a asp-controller="Works" asp-action="Index" asp-route-id="@category.ID">
                        <div class="img_text">
                            <img src="~/img/Categories/@category.Image" style="width:100%" />
                            <div class="centered"><h1>@category.Name</h1></div>
                        </div>
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.ID">Edit</a>
                        <form asp-controller="Categories" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@category.ID" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    }
                </div> 
            }
    </div> 
</div>

<h1 id="username">Hello</h1>

<script src="~/js/Categories.js"></script>
